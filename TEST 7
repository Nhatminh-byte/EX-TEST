            line-height: 1.6;
            margin: 20px;
        }
        .section {
            margin-bottom: 30px;
        }
        .question {
            margin-bottom: 20px;
        }
        .question p {
            font-weight: bold;
        }
        .options {
            margin-left: 20px;
        }
        .options label {
            display: block;
            margin-bottom: 10px;
        }
        #timer {
            font-size: 20px;
            font-weight: bold;
            color: red;
            margin-bottom: 20px;
        }
        .answer {
            font-weight: bold;
            color: green;
            margin-top: 10px;
        }
        #submit-btn {
            padding: 10px 20px;
            font-size: 16px;
            background: blue;
            color: white;
            border: none;
            cursor: pointer;
        }
        #result {
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
        }
        .question .request {
            white-space: pre-line;  /* Cho ph√©p xu·ªëng d√≤ng */
            font-style: italic;
        }
